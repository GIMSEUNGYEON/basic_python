import sys
from PyQt5.QtWidgets import QApplication, QMainWindow, QWidget, QPushButton, QLabel, QVBoxLayout
from PyQt5.Qt import QPixmap

class MainClass(QMainWindow):
    def __init__(self):
        QMainWindow.__init__(self)
        self.show()
        self.flag_wb = True
        self.flag_ing = True
        self.pane()

    def pane(self):
        self.setGeometry(100, 100, 450, 450)
        self.setWindowTitle('omok')

        central_widget = QWidget(self)
        self.setCentralWidget(central_widget)

        layout = QVBoxLayout()

        self.lbl_reset = QPushButton('reset', central_widget)
        layout.addWidget(self.lbl_reset)
        self.lbl_reset.clicked.connect(self.myReset)

        self.lbl2D = [[None for _ in range(10)] for _ in range(10)]

        for i in range(10):
            for j in range(10):
                label = QLabel('', central_widget)
                label.setPixmap(QPixmap('0.png'))
                label.setGeometry(j * 40, i * 40, 40, 40)
                label.setText('0')
                label.mousePressEvent = self.myClick  # 클릭 이벤트 처리
                layout.addWidget(label)

        central_widget.setLayout(layout)
        self.arr2D = [[0] * 10 for _ in range(10)]

    def myClick(self, event):
        if not self.flag_ing:
            return

        label = self.sender()  # 클릭한 라벨을 가져옵니다.
        if self.flag_wb:
            print('print')
            label.setText('1')

    def myRender(self):
        pass

    def myReset(self):
        pass

if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = MainClass()
    app.exec_()
